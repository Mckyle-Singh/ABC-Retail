@model ABC_Retail.Models.Product

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Product";
}

<div class="container-fluid px-4">
    <h2 class="mb-4">🛍️ Add New Product</h2>

    <div class="card shadow-sm border-0 mb-5">
        <div class="card-body">
            <form asp-action="CreateProduct" method="post" enctype="multipart/form-data">
                <div class="row g-4">

                    <!-- Product Info -->
                    <div class="col-12">
                        <h5 class="text-muted">📦 Product Details</h5>
                        <hr />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Product Name</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Wireless Mouse" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Category" class="form-label">Category</label>
                        <input asp-for="Category" class="form-control" placeholder="e.g. Electronics" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Price" class="form-label">Price (ZAR)</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="StockQty" class="form-label">Stock Quantity</label>
                        <input asp-for="StockQty" class="form-control" type="number" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="RowKey" class="form-label">SKU</label>
                        <input asp-for="RowKey" class="form-control" readonly />
                    </div>

                    <input type="hidden" asp-for="PartitionKey" />

                    <!-- Image Upload -->
                    <div class="col-12 mt-4">
                        <h5 class="text-muted">🖼️ Product Image</h5>
                        <hr />
                    </div>

                    <div class="col-md-6">
                        <label for="ImageFile" class="form-label">Upload Image</label>
                        <input type="file" asp-for="ImageFile" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 d-flex align-items-center justify-content-center">
                        <div class="border rounded p-2 text-center" style="width: 100%; height: 200px; background-color: #f8f9fa;">
                            <span class="text-muted">Image preview will appear here</span>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="col-12 mt-4">
                        <h5 class="text-muted">📝 Description</h5>
                        <hr />
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label">Product Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Brief product description..."></textarea>
                    </div>
                </div>

                <div class="mt-5 d-flex justify-content-start gap-3">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save me-2"></i> Save Product
                    </button>
                    <a asp-action="ManageProducts" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-arrow-left me-2"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
