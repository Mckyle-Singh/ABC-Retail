@model List<ABC_Retail.Models.Product>

<h2>Product Catalog</h2>

@if (Model.Count == 0)
{
    <p>No products available.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Description</th>
                <th>Image</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.StockQty</td>
                    <td>@product.Description</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.Name" width="100" />
                        }
                        else
                        {
                            <span>No image</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-rowKey="@product.RowKey" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="Delete" method="post" style="display:inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="rowKey" value="@product.RowKey" />
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete @product.Name?')">
                                Delete
                            </button>
                        </form>
                        <!-- 🛒 Temporary Add to Cart -->
                        <form asp-controller="CustomerCart" asp-action="AddToCart" method="post" style="display:inline">
                            <input type="hidden" name="ProductId" value="@product.RowKey" />
                            <input type="hidden" name="ProductName" value="@product.Name" />
                            <input type="hidden" name="Price" value="@product.Price" />
                            <input type="hidden" name="Quantity" value="1" />
                            <button type="submit" class="btn btn-sm btn-primary"
                            @(product.StockQty > 0 ? "" : "disabled")>
                                Add to Cart
                            </button>
                        </form>


                    </td>

                </tr>
            }
        </tbody>
    </table>
}

